{% extends "base.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}

  <div class="govuk-width-container">
    <a href="/admin/professions/{{ profession.slug }}" class="govuk-back-link">{{ ('app.back' | t) }}</a>

    <main class="govuk-main-wrapper">

      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">

          <h1 class="govuk-heading-l">{{ ('professions.form.headings.edit' | t({professionName: profession.name})) }}</h1>

          <form method="post" action="/admin/professions/{{ profession.slug }}/edit">
            {{
              govukButton({
                id: "submit-button",
                type: "Submit",
                text: ('professions.form.button.edit' | t)
              })
            }}
          </form>

        </div>

        <div class="govuk-grid-column-one-third"></div>
      </div>

    </main>
  </div>

{% endblock %}