  <p class="govuk-body-m rpr-listing__search-criteria-container">
    <span class="govuk-!-font-weight-bold">{{ (filterCriteriaTextPrefix + ".labels.nations") | t }}</span>
    {% for nation in filters.nations %}
      <strong class="govuk-tag">{{ nation | t }}</strong>
    {% endfor %}
  </p>
{% endif %}

