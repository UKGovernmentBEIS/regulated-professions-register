{% if filters.keywords %}
  <p class="govuk-body-m rpr-listing__search-criteria-container">
    <span class="govuk-!-font-weight-bold">{{ (filterCriteriaTextPrefix + ".labels.keywords") | t }}</span>
    <strong class="govuk-tag">{{ filters.keywords }}</strong>
  </p>
{% endif %}

